algoritmo "Par ou Impar"
var

          n1 : inteiro

inicio


          Escreva("Digite um numero: ")
          leia(n1)
          
          
          se (n1 % 2 = 0) entao
          
             escreva("O seu numero é par")
             
             senao
             
             escreva("O seu numero é impar")
             
             FimSe
             

fimalgoritmo
